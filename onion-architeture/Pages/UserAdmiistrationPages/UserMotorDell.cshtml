@page "{clientId:int}/{motorcycleId:int}"
@model onion_architeture.Pages.UserAdmiistrationPages.UserMotorDellModel
@{
    ViewData["Title"] = "Delete Motorcycle";
}

<h1>Delete Motorcycle</h1>

<h3>Are you sure you want to delete this motorcycle?</h3>
<div>
    <h4>Motorcycle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Model.ClientAndMotorcycle.Motorcycle.Brand
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.ClientAndMotorcycle.Motorcycle.Model
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ClientAndMotorcycle.ClientId" />
        <input type="hidden" asp-for="ClientAndMotorcycle.MotorcycleId" />
        <button type="submit" class="btn btn-danger">Return to store</button>
        <a asp-page="./DetailsUserMotorModel" asp-route-id="@Model.ClientAndMotorcycle.ClientId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
